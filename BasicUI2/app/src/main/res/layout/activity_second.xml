<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:background="@color/red_orange"
        android:text="Inicio"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:onClick="antes"
            android:textColor="@color/white"
            android:background="@color/red_orange"
            android:text="Puntos Reciclaje" />

        <TextView
            android:id="@+id/tvList"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:textAlignment="center"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/red_orange"
            android:text="Lista de puntos" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:background="@color/red_orange"
            android:text="Resumen puntos" />

        <TextView
            android:id="@+id/tvRecycle"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/red_orange"
            android:text="Recicla tus puntos QR" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvConsult"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/red_orange"
        android:text="Consulta" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="10dp"
        android:onClick="exit"
        android:text="Exit" />


</LinearLayout>